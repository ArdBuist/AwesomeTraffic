<UserControl x:Class="TrafficSimulation.InfoBalk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300" >

    <UserControl.Resources>
        <!--
     Hier moet nog een linear brush achtig komen zodat je en knoppen een mooie leuk overgang kan laten hebben.   
     -->
        <Style x:Key="infoBalkLabels" TargetType="Label">
            <Setter Property="Width" Value="auto" />
            <Setter Property="Height" Value="20" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="1,1,1,1" />
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="8" />
            <Setter Property="FontWeight" Value="Black" />
        </Style>

        <Style x:Key="infoBalkListbox" TargetType="ListBox">
            <Setter Property="Height" Value="70" />
            <Setter Property="Width" Value="80" />
            <Setter Property="HorizontalAlignment" Value="Center" /> 
            <Setter Property="VerticalAlignment" Value="Top"   />
            <Setter Property="SelectionMode" Value="Single" />
        </Style>
        
        <Style x:Key="infoBalkButtons" TargetType="Button" >
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Margin" Value="1,1,1,1" />
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="BorderStyle"
                                Background="Green" 
                                BorderBrush="White" 
                                BorderThickness="3" 
                                CornerRadius="5,5,5,5" >
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              ClipToBounds="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BorderStyle" Property="Background" Value="LightGray"/>
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid x:Name="BasicInfobalk" Background="Green" >
        <Border BorderBrush="Gray" BorderThickness="3" CornerRadius="15,0,15,0" Background="LightGreen" >
            <Grid>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="2*"/>
                 </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="0">
                    <TextBlock FontFamily="Verdana" 
                               FontSize="11" 
                               FontWeight="Black" 
                               FontStyle="Italic"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Text="Information about current Lane"/>
                </Grid>
                
                <Grid Grid.Row="1" Grid.Column="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="2*" />
                       
                      
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    
                        <Image x:Name="ImageInfoBalk" 
                           Grid.Row="0"
                           Grid.Column="1" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Height="50"
                           Width="50"
                           Source="Resources\Roads\bendLD.png"/>
                    
                        <Button x:Name="RotateLeft"  
                            Style="{StaticResource infoBalkButtons}"
                            Grid.Row="0" 
                            Grid.Column="0"  
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Bottom" 
                            >
                        <TextBlock Text="boe" />
                    </Button>

                        <Button x:Name="RotatedRight" 
                            Style="{StaticResource infoBalkButtons}"
                            Grid.Row="0" 
                            Grid.Column="2" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Bottom" >
                        <TextBlock Text="boe1" />
                    </Button>

                    </Grid>
                    
                    <Label x:Name="labelLanes" 
                           Grid.Row="1" 
                           Grid.Column="0" 
                           Style="{StaticResource infoBalkLabels}" 
                           Content="Amount of Lanes" />

                    <ListBox x:Name="listboxLanes" 
                             Grid.Row="2" 
                             Grid.Column="0"
                             Style="{StaticResource infoBalkListbox}"
                             >
                        <ListBoxItem Content="1 Lane" />
                        <ListBoxItem Content="2 Lanes" />
                        <ListBoxItem Content="3 Lanes" />
                    </ListBox>
                    
                    <Label x:Name="labelSpeed" 
                           Grid.Row="1" 
                           Grid.Column="1" 
                           Style="{StaticResource infoBalkLabels}" 
                           Content="Maximum speedlimit" />
                    
                    <ListBox x:Name="listboxSpeed" 
                             Grid.Row="2" 
                             Grid.Column="1"
                             Style="{StaticResource infoBalkListbox}" 
                             >
                        <ListBoxItem Content="30 km/h" />
                        <ListBoxItem Content="50 km/h" />
                        <ListBoxItem Content="80 km/h" />
                        <ListBoxItem Content="100 km/h" />
                    </ListBox>

                    <Label x:Name="labelStrategie" Visibility="Hidden"
                           Grid.Row="1" 
                           Grid.Column="0" 
                           Style="{StaticResource infoBalkLabels}"
                           Content="Choose your traffic strategy" />
                    
                    <ListBox x:Name="listboxStrategie" Visibility="Hidden"
                             Grid.Row="2" 
                             Grid.Column="0"
                             Style="{StaticResource infoBalkListbox}" >
                        <ListBoxItem Content="Tijd" />
                        <ListBoxItem Content="Wachttijd" />
                        
                    </ListBox>

                    <Label x:Name="labelEfficientie" Visibility="Hidden"
                           Grid.Row="1" 
                           Grid.Column="1" 
                           Style="{StaticResource infoBalkLabels}" 
                           Content="The efficiency of your crossroad" />

                </Grid>
                
                <Grid Grid.Row="2" Grid.Column="0">
                    
                    <TextBlock Text="Information about the World" 
                                FontFamily="Verdana" 
                                FontSize="11" 
                                FontWeight="Black" 
                                FontStyle="Italic"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"/>
                </Grid>
                
                <Grid Grid.Row="3" Grid.Column="0">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="labelTotalCars" 
                           Grid.Row="0" 
                           Grid.Column="0" 
                           Style="{StaticResource infoBalkLabels}" 
                           Content="Amount of cars in your world" />

                    <Label x:Name="labelWaitingCars" 
                           Grid.Row="1" 
                           Grid.Column="0" 
                           Style="{StaticResource infoBalkLabels}" 
                           Content="Amount of cars waiting" />

                    <Label x:Name="labelDrivingCars" 
                           Grid.Row="2" 
                           Grid.Column="0" 
                           Style="{StaticResource infoBalkLabels}"
                           Content="Amount of cars driving" />

                    <Label x:Name="labelCrossroads" 
                           Grid.Row="3" 
                           Grid.Column="0" 
                           Style="{StaticResource infoBalkLabels}"
                           Content="Amount of crossroads" />

                    <Label x:Name="labelEfficientieTabel" 
                           Grid.Row="4" 
                           Grid.Column="0" 
                           Style="{StaticResource infoBalkLabels}"
                           VerticalAlignment="Top"
                           Content="Efficientie" />
                    
                    <Button x:Name="greenWave" 
                            Click="GreenWave_Click"
                            Grid.Row="5"
                            Grid.Column="0"
                            Content="Add Greenwave"/>
                    
                    <Button x:Name="greenWaveDelete" 
                            Click="GreenWaveDelete_Click"
                            Grid.Row="5"
                            Grid.Column="1"
                            Content="Delete Greenwave"/>
                    
                </Grid>
                
            </Grid>
        </Border>
    </Grid>

</UserControl>
