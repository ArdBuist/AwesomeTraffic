<UserControl x:Class="TrafficSimulation.ExtraButtonsOS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="100">
    <UserControl.Resources>
        <!--
     Hier moet nog een linear brush achtig komen zodat je en knoppen een mooie leuk overgang kan laten hebben.   
     -->
        <Style x:Key="StyleRadioButton" TargetType="RadioButton">
            <Setter Property="Width" Value="70" />
            <Setter Property="Height" Value="60" />
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Margin" Value="5,0,5,0" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Border BorderBrush="Gray" BorderThickness="5" Background="White" x:Name="RadioButtonBorder" CornerRadius="10,0,10,0">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              ClipToBounds="True" 
                                              >
                            </ContentPresenter>

                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RadioButtonBorder" Property="Background" Value="white"/>
                                <Setter Property="Foreground" Value="Red" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="RadioButtonBorder" Property="Background" Value="Green"/>
                                <Setter Property="BorderBrush" Value="Green"/>
                                <Setter Property="Opacity" Value="0.25"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="RadioButtonBorder" Property="Background" Value="LightGreen"/>
                                <Setter Property="BorderBrush" Value="Green"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="5" CornerRadius="10,0,10,0" Background="White" Grid.Row="0" Grid.Column="0">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" x:Name="Rij1"/>
                    <RowDefinition Height="*" x:Name="Rij2"/>
                    <RowDefinition Height="*" x:Name="Rij3"/>
                    <RowDefinition Height="*" x:Name="Rij4"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <RadioButton x:Name="Road_1_3" Style="{StaticResource StyleRadioButton}" GroupName="Road" Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="Road_1_3"/>
                </RadioButton>
                <RadioButton x:Name="Road_2_4" Style="{StaticResource StyleRadioButton}" GroupName="Road" Grid.Column="0" Grid.Row="1">
                    <TextBlock Text="RechteWeg_2_4"/>
                </RadioButton>
                <RadioButton x:Name="Bend_1_2" Style="{StaticResource StyleRadioButton}" GroupName="Bend" Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="Bend_1_2"/>
                </RadioButton>
                <RadioButton x:Name="Bend_2_3" Style="{StaticResource StyleRadioButton}" GroupName="Bend" Grid.Column="0" Grid.Row="1">
                    <TextBlock Text="Bend_2_3"/>
                </RadioButton>
                <RadioButton x:Name="Bend_3_4" Style="{StaticResource StyleRadioButton}" GroupName="Bend" Grid.Column="0" Grid.Row="2">
                    <TextBlock Text="Bend_3_4"/>
                </RadioButton>
                <RadioButton x:Name="Bend_4_1" Style="{StaticResource StyleRadioButton}" GroupName="Bend" Grid.Column="0" Grid.Row="3">
                    <TextBlock Text="Bendt_4_1"/>
                </RadioButton>

            </Grid>
        </Border>
    </Grid>
</UserControl>
